
# Routes

#ProductController
POST    /products                         controllers.ProductController.createProduct
GET     /products                         controllers.ProductController.getProducts
GET     /products/:id                     controllers.ProductController.getProduct(id:Long)
PUT     /products/:id                     controllers.ProductController.updateProduct(id:Long)
DELETE  /products/:id                     controllers.ProductController.deleteProduct(id: Long)

#UserController
POST    /users                            controllers.UserController.createUser
GET     /users                            controllers.UserController.getUsers
GET     /users/:id                        controllers.UserController.getUser(id:Long)
PUT     /users                            controllers.UserController.updateUser(id:Long)
DELETE  /users/:id                        controllers.UserController.deleteUser(id: Long)

#CartController
POST    /cart                            controllers.CartController.addToCart(id:Long)
GET     /cart                            controllers.CartController.getCart
PUT     /cart                            controllers.CartController.updateCart(id:Long)
DELETE  /cart/:id                        controllers.CartController.deleteFromCart(id: Long)

#CategoryController
POST    /categories                      controllers.CategoryController.createCategory
GET     /categories                      controllers.CategoryController.getCategories
GET     /categories/:id                  controllers.CategoryController.getCategory(id: Long)
PUT     /categories/:id                  controllers.CategoryController.updateCategory(id: Long)
DELETE  /categories/:id                  controllers.CategoryController.deleteCategory(id: Long)

#OrderController
POST    /orders                      controllers.OrderController.createOrder
GET     /orders                      controllers.OrderController.getOrders
GET     /orders/:id                  controllers.OrderController.getOrder(id: Long)
PUT     /orders/:id                  controllers.OrderController.updateOrder(id: Long)
DELETE  /orders/:id                  controllers.OrderController.deleteOrder(id: Long)

#WishListController
POST    /wishlist                            controllers.WishlistController.addToWishlist
GET     /wishlist                            controllers.WishlistController.getWishlist
PUT     /wishlist/:id                        controllers.WishlistController.updateWishlist(id:Long)
DELETE  /wishlist/:id                        controllers.WishlistController.deleteFromWishlist(id: Long)

#Payment
POST    /payments                            controllers.PaymentController.createPayment
GET     /payments                            controllers.PaymentController.getPayments
GET     /payments/:id                        controllers.PaymentController.getPayment(id:Long)
DELETE  /payments/:id                        controllers.PaymentController.deletePayment(id:Long)

#Account
POST    /acconts                            controllers.AccountController.createAccount
GET     /acconts                            controllers.AccountController.getAccounts
GET     /acconts/:id                        controllers.AccountController.getAccount(id:Long)
PUT     /acconts/:id                        controllers.AccountController.updateAccount(id:Long)
DELETE  /acconts/:id                        controllers.AccountController.deleteAccount(id: Long)

#ShippingController
POST    /shipping                            controllers.ShippingController.createShipping
GET     /shipping                            controllers.ShippingController.getShipping
PUT     /shipping                            controllers.ShippingController.updateShipping
DELETE  /shipping                            controllers.ShippingController.deleteShipping

#OpinionController
POST    /opinions                            controllers.OpinionController.createOpinion
GET     /opinions                            controllers.OpinionController.getOpinions
GET     /opinions/:id                        controllers.OpinionController.getOpinion(id:Long)
PUT     /opinions/:id                        controllers.OpinionController.updateOpinion(id:Long)
DELETE  /opinions/:id                        controllers.OpinionController.deleteOpinion(id: Long)
